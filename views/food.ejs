<%- include("header")-%>


<div class="box">

  <form class="form form-floating" action="/recipes" method="post">
    <div class="form-floating mb-3">
      <select class="form-control form-select" id="mealtype" name="mealtype">
        <option selected value=" ">select your mealtype <i class="fa-solid fa-caret-down"></i></option>
        <option value="main course">main course</option>
        <option value="side dish">side dish</option>
        <option value="dessert">dessert</option>
        <option value="appetizer">appetizer</option>
        <option value="salad">salad</option>
        <option value="bread">bread</option>
        <option value="breakfast">breakfast</option>
        <option value="soup">soup</option>
        <option value="beverage">beverage</option>
        <option value="sauce">sauce</option>
        <option value="marinade">marinade</option>
        <option value="fingerfood">fingerfood</option>
        <option value="snack">snack/option>
        <option value="drink">drink</option>

      </select>
    </div>
    <div class="form-floating mb-3">
      <select class="form-control form-select" id="diettype" name="diettype">
        <option  value="">select your diet</option>
        <option value="Vegetarian">Vegetarian</option>
        <option value="Gluten Free">Gluten Free</option>
        <option value="Ketogenic">Ketogenic</option>
        <option value="Lacto-Vegetarian">Lacto-Vegetarian</option>
        <option value="Ovo-Vegetarian">Ovo-Vegetarian</option>
        <option value="Vegan">Vegan</option>
        <option value="Pescetarian">Pescetarian</option>
        <option value="Paleo">Paleo</option>
        <option value="Primal">Primal</option>
        <option value="Low FODMAP">Low FODMAP</option>
        <option value="Whole30">Whole30</option>

      </select>
    </div>
    <div class="form-floating mb-3">

      <input class="form-control" id="main" type="text" name="main">
      <label for="main" class="form-label">Main Ingredient (e.g Pasta,Rice)</label>
    </div>

    <div class=" form-floating mb-3">
      <textarea class="form-control" id="ingridient1" name="ingridient1" rows="3" cols="20"></textarea>

      <label class="form-label" for="ingridient1">ingridients (i.e separate with",")</label>
    </div>

    <div class=" form-floating mb-3">

      <input class="form-control" id="minCalories" type="number" name="minCalories">
      <label class="form-label" for="minCalories"">minCalories</label>

             </div>
             <div class=" form-floating mb-3">

        <input class="form-control" id="maxCalories" type="number" name="maxCalories">
        <label class="form-label" for="maxCalories"">maxCalories</label>

              </div>
<button class=" btn btn-primary btn-lg w-100" type="submit" name="button">search</button>

  </form>

</div>
<%- include("footer")-%>
